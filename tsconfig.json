{
	"compilerOptions": {
		"target":                           "es2016",
		"module":                           "nodenext",
		"moduleResolution":                 "nodenext",
		"typeRoots":                        [
			"node_modules/@types"
		],
		"allowImportingTsExtensions":       true,
		"resolveJsonModule":                true,
		"noEmit":                           true,
		"esModuleInterop":                  true,
		"forceConsistentCasingInFileNames": true,
		"strict":                           true,
		"skipLibCheck":                     true
	}
}
